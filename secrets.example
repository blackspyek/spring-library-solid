# Example Secrets file - Copy to secrets.yaml and fill with actual values
# DO NOT COMMIT secrets.yaml to GitHub!
# This file is a template to show the required secret keys
apiVersion: v1
kind: Secret
metadata:
  name: library-secrets
  namespace: library
type: Opaque
stringData:
  # Database password
  DATABASE_PASSWORD: "your-database-password-here"
  
  # JWT secrets
  JWT_SECRET: "your-jwt-secret-key-at-least-64-characters-long"
  INTERNAL_SECRET: "your-internal-secret-key-for-service-to-service-communication"
  
  # Gmail SMTP credentials
  # 1. Enable 2-Step Verification: https://myaccount.google.com/security
  # 2. Generate App Password: https://myaccount.google.com/apppasswords
  #    (Select "Mail" and "Windows Computer")
  # 3. Copy the 16-character password below (without spaces)
  MAIL_USERNAME: "your-email@gmail.com"
  MAIL_PASSWORD: "xxxx xxxx xxxx xxxx"
